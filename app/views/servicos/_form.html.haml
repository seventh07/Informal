= form_for @servico do |f|
  - if @servico.errors.any?
    #error_explanation
      %h2= "#{pluralize(@servico.errors.count, "error")} prohibited this servico from being saved:"
      %ul
        - @servico.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nome
    = f.text_field :nome
  .actions
    = f.submit 'Save'
